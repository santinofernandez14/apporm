<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Estudiantes</title>
    <link rel="stylesheet" href="/css/estilo.css">
</head>

<body>
    <header>
        <nav>
            <a href="/">Proyecto universidad</a>
            <div>
                <a href="/estudiantes/listar">Listar estudiantes</a>
                <a href="/profesores/listar">Listar profesores</a>
                <a href="/cursos/listar">Listar cursos</a>
                <a href="/inscripciones/listar">Listar inscripciones</a>
            </div>
        </nav>
    </header>

    <!-- Enlace Agregar Estudiante, fuera del header -->
    <div id="agregar-container">
        <a id="agregar" href="/estudiantes/insertar">Agregar Estudiante</a>
    </div>

    <div id="content">
        <h1>Proyecto universidad</h1>
        <h3>Lista de estudiantes</h3>
        <div id="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>DNI</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% estudiantes.forEach(estudiante => { %>
                        <tr>
                            <td><%= estudiante.id %></td>
                            <td><%= estudiante.dni %></td>
                            <td><%= estudiante.nombre %></td>
                            <td><%= estudiante.apellido %></td>
                            <td><%= estudiante.email %></td>
                            <td>
                                <a id="editar" href="/estudiantes/editar/<%= estudiante.id %>">Editar</a>
                                <a id="eliminar" href="/estudiantes/eliminar/<%= estudiante.id %>"
                                    onclick="return confirm('¿Está seguro de que desea eliminar este estudiante?')">Eliminar</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
